# MCP Jive Server Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host and port
MCP_JIVE_HOST=localhost
MCP_JIVE_PORT=3454

# Server mode and debugging
MCP_JIVE_DEBUG=false
MCP_JIVE_LOG_LEVEL=INFO
MCP_JIVE_AUTO_RELOAD=true

# =============================================================================
# LANCEDB DATABASE CONFIGURATION (Vector Database)
# =============================================================================

# LanceDB connection settings
LANCEDB_USE_EMBEDDED=true
LANCEDB_HOST=localhost
LANCEDB_PORT=8080
LANCEDB_TIMEOUT=30

# LanceDB data storage paths
LANCEDB_PERSISTENCE_PATH=./data/lancedb_jive
LANCEDB_DATA_PATH=./data/lancedb_jive
LANCEDB_BACKUP_ENABLED=true

# LanceDB embedding configuration
LANCEDB_EMBEDDING_MODEL=all-MiniLM-L6-v2
LANCEDB_DEVICE=cpu

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Authentication and security
SECRET_KEY=dev-secret-key-change-in-production
ENABLE_AUTH=false

# CORS settings
CORS_ENABLED=true
CORS_ORIGINS=*

# Rate limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=100

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Worker and connection settings
MAX_WORKERS=4
REQUEST_TIMEOUT=30
CONNECTION_TIMEOUT=60

# Monitoring and metrics
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_PROFILING=false

# =============================================================================
# TOOL CONFIGURATION
# =============================================================================

# Tool feature toggles
ENABLE_TASK_MANAGEMENT=true
ENABLE_WORKFLOW_EXECUTION=true
ENABLE_SEARCH_TOOLS=true
ENABLE_VALIDATION_TOOLS=true
ENABLE_SYNC_TOOLS=true

# Tool behavior settings
MAX_TASK_DEPTH=5
AUTO_DEPENDENCY_VALIDATION=true
SEARCH_RESULT_LIMIT=50
SEMANTIC_SEARCH_THRESHOLD=0.7

# Legacy tool support has been removed - using consolidated tools only

# Tool performance settings
MCP_JIVE_TOOL_CACHING=true
MCP_JIVE_CACHE_TTL=300
MCP_JIVE_MAX_CONCURRENT=10

# Migration settings (for development/testing)
MCP_JIVE_MIGRATION_MODE=false
# MCP_JIVE_MIGRATION_LOG=/path/to/migration.log
MCP_JIVE_MIGRATION_DRY_RUN=false

# Advanced features
MCP_JIVE_AI_ORCHESTRATION=false
MCP_JIVE_QUALITY_GATES=false
MCP_JIVE_ADVANCED_ANALYTICS=true
MCP_JIVE_WORKFLOW_ORCHESTRATION=true

# Consolidation info display
MCP_JIVE_SHOW_CONSOLIDATION_INFO=false

# =============================================================================
# TOOL-SPECIFIC VALIDATION LIMITS
# =============================================================================

# Context and content limits
MCP_JIVE_CONTEXT_TAGS_MAX=10
MCP_JIVE_ACCEPTANCE_CRITERIA_MAX=15
MCP_JIVE_NOTES_MAX_LENGTH=2000
MCP_JIVE_DESCRIPTION_MAX_LENGTH=5000

# Response formatting settings
MCP_JIVE_MAX_RESPONSE_SIZE=50000
MCP_JIVE_TRUNCATION_THRESHOLD=45000
MCP_JIVE_ENABLE_AUTO_TRUNCATION=true

# Execution settings
MCP_JIVE_MAX_PARALLEL_EXECUTIONS=5
MCP_JIVE_EXECUTION_TIMEOUT=60

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development features
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_LOGGING=false
TEST_MODE=false
MOCK_AI_RESPONSES=false

# Code quality tools
ENABLE_TYPE_CHECKING=true
ENABLE_LINTING=true

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment type (affects default behaviors)
# Options: development, staging, production
MCP_ENVIRONMENT=development

# =============================================================================
# NOTES AND USAGE GUIDELINES
# =============================================================================

# 1. Lines starting with # are comments and will be ignored
# 2. Remove the # at the beginning of a line to enable that setting
# 3. Boolean values should be: true, false (lowercase)
# 4. Numeric values should not be quoted
# 5. String values with spaces should be quoted
# 6. For production deployments:
#    - Change SECRET_KEY to a secure random value
#    - Set MCP_ENVIRONMENT=production
#    - Enable authentication if needed (ENABLE_AUTH=true)
#    - Review and adjust performance settings
#    - Disable development features
# 7. Tools:
#    - Uses 7 consolidated tools exclusively
#    - Legacy tool mode support has been removed
# 8. Database:
#    - Uses LanceDB (embedded vector database)
#    - No external database setup required
#    - Data stored in ./data/lancedb_jive by default
# 9. Configuration validation:
#    - Invalid values will use defaults with warnings
#    - Check logs for configuration validation messages
#    - Use MCP_JIVE_DEBUG=true for detailed config info
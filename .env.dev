# MCP Jive Development Environment Configuration
# This file is automatically generated by setup-dev.py
# You can modify these values as needed for your development environment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
MCP_JIVE_HOST=localhost
MCP_JIVE_PORT=3456
MCP_JIVE_ENV=development
MCP_JIVE_DEBUG=true
MCP_JIVE_AUTO_RELOAD=true
MCP_JIVE_DETAILED_ERRORS=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
MCP_JIVE_LOG_LEVEL=DEBUG
MCP_JIVE_LOG_FORMAT=detailed
MCP_JIVE_LOG_FILE=logs/mcp-jive-dev.log
MCP_JIVE_LOG_ROTATION=true
MCP_JIVE_LOG_MAX_SIZE=10MB
MCP_JIVE_LOG_BACKUP_COUNT=5

# =============================================================================
# DATABASE CONFIGURATION (WEAVIATE)
# =============================================================================
WEAVIATE_URL=http://localhost:8082
WEAVIATE_EMBEDDED=true
WEAVIATE_PERSISTENCE_DATA_PATH=./data/weaviate
WEAVIATE_QUERY_DEFAULTS_LIMIT=25
WEAVIATE_BATCH_SIZE=100
WEAVIATE_BATCH_DYNAMIC=true
WEAVIATE_CONNECTION_PARAMS={"timeout_config": (5, 15)}

# Weaviate vectorizer settings (for semantic search)
# text2vec-contextionary: Lightweight FastText-based vectorizer for embedded mode
# Provides semantic search capabilities without external API dependencies
# Falls back to keyword search if vectorization fails
WEAVIATE_ENABLE_VECTORIZER=true
WEAVIATE_VECTORIZER_MODULE=text2vec-contextionary
WEAVIATE_SEARCH_FALLBACK=true

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================
# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7

# OpenAI (GPT)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Google (Gemini)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro
GOOGLE_MAX_TOKENS=4096
GOOGLE_TEMPERATURE=0.7

# Default AI Provider
DEFAULT_AI_PROVIDER=anthropic

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
MCP_JIVE_SECRET_KEY=dev-secret-key-change-in-production
MCP_JIVE_ENABLE_AUTH=false
MCP_JIVE_AUTH_TOKEN=dev-auth-token
MCP_JIVE_CORS_ORIGINS=["http://localhost:3456", "http://localhost:3001", "http://127.0.0.1:3456"]
MCP_JIVE_CORS_ALLOW_CREDENTIALS=true
MCP_JIVE_RATE_LIMIT_ENABLED=false
MCP_JIVE_RATE_LIMIT_REQUESTS=100
MCP_JIVE_RATE_LIMIT_WINDOW=60

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
MCP_JIVE_WORKERS=1
MCP_JIVE_MAX_CONNECTIONS=100
MCP_JIVE_KEEPALIVE_TIMEOUT=5
MCP_JIVE_REQUEST_TIMEOUT=30
MCP_JIVE_RESPONSE_TIMEOUT=30
MCP_JIVE_GRACEFUL_TIMEOUT=30

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
MCP_JIVE_ENABLE_METRICS=true
MCP_JIVE_METRICS_PORT=9090
MCP_JIVE_ENABLE_HEALTH_CHECK=true
MCP_JIVE_HEALTH_CHECK_INTERVAL=30
MCP_JIVE_ENABLE_PROFILING=true
MCP_JIVE_PROFILING_INTERVAL=60

# =============================================================================
# TOOL CONFIGURATION
# =============================================================================
# Task Management
TASK_MANAGEMENT_MAX_TASKS=1000
TASK_MANAGEMENT_DEFAULT_PRIORITY=medium
TASK_MANAGEMENT_AUTO_ASSIGN=true

# Workflow Execution
WORKFLOW_EXECUTION_MAX_STEPS=100
WORKFLOW_EXECUTION_TIMEOUT=300
WORKFLOW_EXECUTION_RETRY_ATTEMPTS=3

# Progress Tracking
PROGRESS_TRACKING_UPDATE_INTERVAL=5
PROGRESS_TRACKING_HISTORY_RETENTION=30

# Search Configuration
SEARCH_MAX_RESULTS=50
SEARCH_DEFAULT_LIMIT=10
SEARCH_ENABLE_FUZZY=true
SEARCH_FUZZY_THRESHOLD=0.8

# =============================================================================
# DEVELOPMENT SPECIFIC CONFIGURATION
# =============================================================================
# Testing
TEST_DATABASE_URL=sqlite:///./test.db
TEST_WEAVIATE_URL=http://localhost:8081
TEST_AI_PROVIDER=mock
TEST_ENABLE_COVERAGE=true
TEST_PARALLEL_WORKERS=auto

# Development Tools
DEV_ENABLE_HOT_RELOAD=true
DEV_WATCH_DIRECTORIES=["src", "tests"]
DEV_WATCH_EXTENSIONS=[".py", ".json", ".yaml", ".yml"]
DEV_IGNORE_PATTERNS=["__pycache__", "*.pyc", ".pytest_cache"]

# Code Quality
CODE_QUALITY_AUTO_FORMAT=true
CODE_QUALITY_AUTO_LINT=true
CODE_QUALITY_AUTO_TYPE_CHECK=false

# Documentation
DOCS_AUTO_GENERATE=false
DOCS_OUTPUT_DIR=docs/build
DOCS_SERVE_PORT=8000

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================
# Data Directory
MCP_JIVE_DATA_DIR=./data

# Configuration File
MCP_JIVE_CONFIG_FILE=config/development.json

# Backup Configuration
MCP_JIVE_ENABLE_BACKUP=false
MCP_JIVE_BACKUP_INTERVAL=3600
MCP_JIVE_BACKUP_RETENTION=7
MCP_JIVE_BACKUP_DIRECTORY=./backups

# Cache Configuration
MCP_JIVE_ENABLE_CACHE=true
MCP_JIVE_CACHE_TTL=300
MCP_JIVE_CACHE_MAX_SIZE=1000

# Feature Flags
FEATURE_ASYNC_PROCESSING=true
FEATURE_BATCH_OPERATIONS=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_WORKFLOW_TEMPLATES=true

# =============================================================================
# ENVIRONMENT SPECIFIC OVERRIDES
# =============================================================================
# These can be overridden by environment-specific files
# .env.local (for local overrides)
# .env.test (for testing)
# .env.production (for production)

# Python Path
PYTHONPATH=./src

# Development Server
UVICORN_HOST=localhost
UVICORN_PORT=3456
UVICORN_LOG_LEVEL=debug
UVICORN_RELOAD=true
UVICORN_RELOAD_DIRS=["src"]